<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.ItemListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.NushiEvents.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.NushiEvents.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            app:menu="@menu/top_app_bar"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="226dp"
        android:layout_height="226dp"
        android:background="@drawable/me"
        android:contentDescription="@string/profilePic" />

    <TextView android:text="@string/self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        />

    <TextView android:text="@string/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        />

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>